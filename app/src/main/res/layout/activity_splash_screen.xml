<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SplashScreen">

    <androidx.cardview.widget.CardView
        android:id="@+id/title_holder"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/Mandy"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="-50dp"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connectify"
            android:textSize="50sp"
            android:fontFamily="@font/blue_vinyl_bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginTop="130dp"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/domain_slogan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect and share your world"
            android:textSize="18sp"
            android:fontFamily="@font/blue_vinyl_bold"

            android:textAlignment="center"
            android:layout_marginTop="200dp"
            android:layout_gravity="center_horizontal"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/logo_holder"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="225dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="75dp"
        android:elevation="0dp"
        >
        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"

            android:src="@drawable/connectify_logo1"
            />

    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/get_started"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:iconSize="20dp"
        android:text="Get Started"
        app:iconGravity="end"

        app:icon="@drawable/baseline_arrow_forward_24"

        />
<!--    android:background="@drawable/custom_bordered_ripple"-->



</androidx.constraintlayout.widget.ConstraintLayout>